<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp" >

    <TextView
        android:id="@+id/textView_answer"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="0"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText_first_no"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="40dp"
        android:inputType="number"/>
    <TextView
        android:id="@+id/textView_first_no"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="First Number"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textView_second_no"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:text="Second Number"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/editText_second_no"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="90dp"
        android:inputType="number"/>
    <Button
        android:id="@+id/add_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="200dp"
        android:text="ADD" />
    <Button
        android:id="@+id/sub_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="SUBTRACT"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        />
    <TextView
        android:id="@+id/text_View_answer2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:text="0"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/multiply_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="110dp"
        android:text="MULTIPLY"
        />
    <TextView
        android:id="@+id/text_View_answer3"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:textStyle="bold"
        android:text="0"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/text_View_answer4"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="0"
        />
    <Button
        android:id="@+id/divide_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="350dp"
        android:text="DIVIDE"
        />

</RelativeLayout>
